pipeline {
    agent any
    
    parameters {
        string(name: 'GIT_REPO_URL', description: 'URL do repositório GitHub', defaultValue: 'https://github.com/suaconta/seurepositorio.git')
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: params.GIT_REPO_URL]]])
                }
            }
        }
        
        stage('Leitura do arquivo .env') {
            steps {
                script {
                    def properties = [:]
                    new File('.env').withReader { reader ->
                        properties = new Properties()
                        properties.load(reader)
                    }
                    properties.each { key, value ->
                        echo "Propriedade: ${key}, Valor: ${value}"
                    }
                }
            }
        }

        // Adicione mais estágios conforme necessário para o seu pipeline
    }
    
}
